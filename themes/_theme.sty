\if@theme@mono@is
    \colorlet{pageC}{white}
    \colorlet{fgC}{black}

    \colorlet{thmC}{black}
    \colorlet{probC}{Black3}
    \colorlet{defC}{Black2}
    \colorlet{solC}{fgC}
    \colorlet{titleC}{Black}

    \colorlet{thmBgC}{LightGray!20!white}
    \colorlet{probBgC}{pageC}
    \colorlet{defBgC}{LightGray!20!white}

