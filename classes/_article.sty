\ProvidesPackage{_article}

\newif\if@kindle@is \@kindle@isfalse
\DeclareOption{kindle} {\@kindle@istrue}

\ProcessOptions\relax

\usepackage[nobottomtitles]{titlesec}

\titleformat{\section}
    {\color{thmC}\normalfont\Large\bfseries}
    {\S \thesection}
    {.5em}
    {}

\titleformat{\subsection}
    {\color{thmC!90!defC}\normalfont\large\bfseries}
    {\thesubsection}
    {.5em}
    {}

\titlespacing*{\section}{0pt}{6ex plus 1ex minus 1ex}{3ex plus .2ex}
\titlespacing*{\subsection}{0pt}{4ex plus 1ex minus 1ex}{1ex plus .2ex}

\if@kindle@is
    \usepackage[a6paper, landscape, margin=0pt]{geometry}
\else
    \usepackage[a4paper, margin=1in]{geometry}
\fi

\setlength\parindent{0pt}
\setlength\parskip{10pt}


\def\maketitle{%
  \newpage
  \null
  \vskip 2em%
  \begin{center}%
  \let \footnote \thanks
    {\LARGE\bfseries \@title \par}%
    \vskip 1.5em%
    {\large
      \lineskip .5em%
      \begin{tabular}[t]{c}%
        \@author
      \end{tabular}\par}%
    \vskip 1em%
    %{\large \@date}%
  \end{center}%
  \par
  \vskip 1.5em%
}
