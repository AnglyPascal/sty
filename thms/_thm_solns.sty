\ProvidesPackage{_thm_solns}

\ProcessOptions\relax

\theoremstyle{solutionstyle}

\declaretheorem[numbered=no, qed=\qedsymbol]{solution}
\declaretheorem[numbered=no, name=Solution]{solution*}

\tcolorboxenvironment{solution}{ solnSpacing=1, }
\tcolorboxenvironment{solution*}{ solnColors=solC, solnSpacing=1, solnBorders  }


\declaretheorem[numbered=no, name=Partial Solution]{partsoln}

\newtcolorbox{idea}{ solnColors=solC!90!pageC, solnSpacing=1, solnBorders }


\declaretheorem[numbered=no, name=Proof, qed=\qedsymbol]{proofBase}
\declaretheorem[numbered=no, name=Proof]{proof*}

\tcolorboxenvironment{proofBase}{ solnSpacing=1, }
\tcolorboxenvironment{proof*}{ solnColors=solC!90!pageC, solnSpacing=1, solnBorders }

\renewenvironment{proof}[1][]{
    \ifthenelse{\isempty{#1}}{% 
        \begin{proofBase}
    }{% 
        \begin{proofBase}[#1]
    }%
}{%
    \end{proofBase}
}

\newenvironment{Proof}{{\textit{Proof}.}}{\qedsymbol}


\theoremstyle{solnDefStyle}

\declaretheorem[numbered=no, name=Definition]{soldef}
\declaretheorem[numbered=no, name=Lemma]{sollem}

\tcolorboxenvironment{sollem*}{
    coltext=solC, blanker, breakable, left=1em,
    before skip=20pt, after skip=20pt,
    borderline west={.2em}{1pt}{thmC!80},
}
\tcolorboxenvironment{soldef*}{
    coltext=solC, blanker, breakable, left=1em,
    before skip=20pt, after skip=20pt,
    borderline west={.1em}{0pt}{black!80},
}


\declaretheorem[style=hintstyle, numbered=no, name=]{hint}


\let\origquote=\quote
\def\quote{\origquote\itshape}

\newtheorem*{abuse*}{Abuse of Notation}

