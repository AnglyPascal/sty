\ProvidesPackage{_thm_styles}

\ProcessOptions\relax


\RequirePackage{amsthm}
\RequirePackage{thmtools}
\RequirePackage{chngcntr}

\def\notestyle{\mdseries\normalfont}


\declaretheoremstyle[
    headfont=\bfseries\color{probC},
    headpunct={. },
    notebraces={(}{)},
    notefont=\color{probC}\mdseries,
]{probstyle}

\declaretheoremstyle[
    headfont=\bfseries,
    headpunct={. },
    notefont=\color{thmC}\notestyle,
]{examplestyle}

\declaretheoremstyle[
    headfont=\bfseries\itshape\color{thmC},
    headpunct={ \color{thmC}--- },
    postheadspace={0pt},
    notebraces={(}{)},
    notefont=\color{thmC}\notestyle,
]{claimstyle}

\declaretheoremstyle[
    headfont=\bfseries\color{thmC},
    headpunct={ \color{thmC}\textbf{---} },
    postheadspace={0pt},
    notebraces={(}{)},
    notefont=\color{thmC}\notestyle,
]{thmstyle}

\declaretheoremstyle[
    headfont=\bfseries\color{thmC},
    headindent={-2pt},
    postheadspace={2pt},
    notebraces={\hspace{-.5pt}}{\hspace{3pt}},
    headpunct={},
    notefont=\color{thmC}\notestyle,
]{emptythmstyle}

\declaretheoremstyle[
    headfont=\bfseries\color{defC},
    bodyfont=\mdseries,
    headpunct={ --- },
    notefont=\color{thmC}\notestyle,
]{defstyle}

\declaretheoremstyle[
    headfont=\bfseries\color{solC},
    notebraces={[}{]},
    headpunct={. },
    notefont=\normalfont,
]{solnstyle}

\declaretheoremstyle[
    headpunct={ \color{thmC}\textbf{---} },
    headfont=\itshape\rmfamily\bfseries\color{thmC},
    headpunct={--- },
    bodyfont=\color{solC},
]{solnDefStyle}

\declaretheoremstyle[
    headfont=\bfseries,
    postheadspace=0pt,
    headpunct={},
]{hintstyle}

\declaretheoremstyle[
    headfont=\bfseries,
    headpunct={. },
]{remarkstyle}
